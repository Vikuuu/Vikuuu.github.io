{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*", "eslint.config.cjs"],
  "exclude": ["dist"],

  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "strictNullChecks": true,
    "allowJs": true
  }
}
